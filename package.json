{
  "name": "nextjs-express-monorepo",
  "version": "1.0.0",
  "type": "module",
  "description": "Next.js web app with Express.js backend - monorepo structure",
  "scripts": {
    "build": "cd backend && cd ../web && npm install && npm install && npm run build",
    "start": "node backend/server.js",
    "start:local": "NODE_ENV=local node backend/server.js",
    "dev": "cd backend && npm run dev",
    "migrate": "db-migrate up",
    "migrate:down": "db-migrate down",
    "migrate:create": "db-migrate create",
    "migrate:reset": "db-migrate reset",
    "migrate:check": "db-migrate check"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "db-migrate": "^0.11.14",
    "db-migrate-pg": "^1.5.2"
  }
}